{% extends '_templates/base.njk' %}

{% block page_title %}Queen | Discography{% endblock %}

{% block page_description %}Queen's discography through the years.{% endblock %}

{% block content %}
<div class="container">

  <h2>Explore Queen's Discography</h2>
  
  <div class="row justify-content-lg-center">
    {% for album in queen.discography %}
    <div class="col-sm-6 col-md-4 col-lg-3">
      <div class="card mb-4 text-center card-album text-warning">
        <img src="img/discs/{{ album.image }}" class="card-img-top" alt="{{ album.title }}">
        <div class="card-img-overlay card-album-text">
          <h5 class="card-title">{{ album.title }}</h5>
          <p class="card-subtitle mb-2 text-white text-monospace">{{ album.year }}</p>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  <br>
</div>
{% endblock %}